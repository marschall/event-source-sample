<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0"
      metadata-complete="true">

	<servlet>
		<servlet-name>serverTime</servlet-name>
		<servlet-class>com.github.marschall.ServerTimeServlet</servlet-class>
		<async-supported>true</async-supported>
	</servlet>

	<servlet>
		<servlet-name>counter</servlet-name>
		<servlet-class>com.github.marschall.CounterServlet</servlet-class>
		<async-supported>true</async-supported>
	</servlet>

	<servlet-mapping>
		<servlet-name>serverTime</servlet-name>
		<url-pattern>/events/time/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>counter</servlet-name>
		<url-pattern>/events/counter/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
</web-app>